/* skeleton */
.skeleton {
  animation: skeleton-loading 1s linear infinite alternate;
}

@keyframes skeleton-loading {
  0% {
    background-color: var(--bg-gray-1);
  }
  100% {
    background-color: var(--bg-2);
  }
}

.skeleton-post-header {
  position: relative;
