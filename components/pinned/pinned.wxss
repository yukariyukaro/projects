/* components/singlePost/singlePost.wxss */
.pinned {
  position: relative;
}

.pinned-background {
  position: absolute;
  width: 81vw;
  height: 36vw;
  top: 7vw;
  left: 9.5vw;
  background-position: center;
  background-repeat: no-repeat;
  background-size: contain;
}

.swiper {
  height: 50vw;
  margin: -5vw 0;
  /* 应该是只有45的高度，但是直接写45的话底部的阴影会被截断
   * 所以就50 + (-5)
   */
}

.outer{
  margin: 5vw;
  width: 90vw;
  height: 40vw;
  border-radius:10rpx;
  overflow: hidden;
  font-size: 4vw;
  box-shadow: var(--shadow-1);
  position: relative;
  background-size: cover;
}

.outer:active {
  opacity: 0.8;
}

.follower-comment-outer {
  position: absolute;
  top: 0;
  right: 0;
  display: flex;
  align-items: center;
  padding: 10px;
}

.follower-count {
  color: white;
  font-size: 3.5vw;
  font-weight: bold;
}

.follower-icon {
  width: 4vw;
  height: 4vw;
  margin-right: 2vw;
}

.pinned-outer {
  width: 100%; 
  height: 100%; 
  position: relative; 
  overflow: hidden; 
  border-radius: 10px;
  background-size: cover;
}

.pinned-content {
  padding: 10rpx 30rpx 10rpx 20rpx;
  box-sizing: border-box;
  background-color: rgba(69, 69, 69, 0.4);
  color: #fff;
  font-size: 3.5vw;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  line-clamp: 3;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}
