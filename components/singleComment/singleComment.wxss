.card-outer{
  position: relative;
  margin: auto;
  margin-left: 7%;
  margin-right: 0;
  width: 90%;
  height:auto;
  border: 1px solid var(--primary); 
  padding: 0 2vw 2vw 2vw;
  border-radius:20rpx;
  box-shadow: 0px 0px 10px rgba(0,0,0,0.16);
  background-color: var(--bg-2);
}

/* 彩虹主题适配 */
.hide_card-outer::before{
  content: "";
  position: absolute;
  inset: 0;
  border-radius: 20rpx; /*1*/
  border: 2px solid transparent; /*2*/
  background: linear-gradient(to bottom right, #e50000 0%, #ff8d00 25%, #ffee00 50%, #028121 75%, #004cff, #770088 100%) border-box; /*3*/
  -webkit-mask: /*4*/
     linear-gradient(#fff 0 0) padding-box, 
     linear-gradient(#fff 0 0);
  -webkit-mask-composite: xor; /*5'*/
      mask-composite: exclude;  
}

