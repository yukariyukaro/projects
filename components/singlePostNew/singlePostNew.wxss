/* components/singlePost/singlePost.wxss */
.header {
  display: flex;
  /* padding:2.5vw 5vw 0vw 5vw; */
  padding: 20rpx 40rpx 0 40rpx;
  justify-content: space-between;
}
.header-title {
  display: flex;
  align-self: center;
}
.avatar-outer {
  display: inline;
  margin: 5rpx 20rpx 0 20rpx;
}
.avatar {
  width: 45rpx;
  height: 45rpx;
}
.serial {
  font-weight: bold;
  font-size: 32rpx;
  align-self: center;
}
.topic {
  color: #8C8C8C;
  align-self: center;
  padding: 5rpx 15rpx;
  border-radius: 10rpx;
  background: var(--divider);
  margin-left: 1vw;
}
.topic-school {
  font-size: 30rpx;
}
.outer{
  margin:40rpx 30rpx 40rpx 30rpx;
  width:690rpx;
  border-radius:10rpx;
  font-size: 30rpx;
  background-color: var(--bg-2);
  box-shadow: 0px 0px 10px rgba(0,0,0,0.16);
}
.outer:active {
  opacity: 0.7;
}
.divider{
  height: 1px;
  margin: 15rpx 20rpx 20rpx 20rpx;
  background-color: var(--divider);
}
.follower-comment-outer {
  display: flex;
}
.follower-icon {
  width: 30rpx;
  height: 30rpx;
  margin-top: 15rpx;
}
.follower-num{
  color: #8C8C8C;
  font-weight: bold;
  font-size: 30rpx;
  align-self: center;
}
.loadmore {
  font-size: 22rpx;
  color: #8C8C8C;
}
.loadmore text {
  float: right
}
.content {
  text-align:left;
  padding: 10rpx 40rpx 30rpx 40rpx;
  white-space: pre-wrap;
  display: flex;
  width: 90%;
  justify-content: space-between;
}
.message-outer {
  /* width: 82%; */
  display: flex;
}
.message-txt {
  word-break: break-word;
  width: 100%;
}
.message-pic-outer {
  width: 15vw;
  height: 15vw;
  position: relative;
  align-self: center;
  border-radius: 10rpx;
  overflow: hidden;
}
.message-pic {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto;
  width: 100%;
  height: 100%;
  border-radius: 10rpx;
}
.music-outer {
  font-size: 28rpx;
  display: flex;
  background: var(--divider);
  width: 90%;
  margin: auto;
  margin-bottom: 15rpx;
  padding: 15rpx 20rpx;
  box-sizing: border-box;  
  border-radius: 10rpx;
  color: #8C8C8C;
  position: relative;
}
.music-title {
  width: 100%;
  overflow: hidden;
  white-space: nowrap;  
  text-overflow: ellipsis;
  font-weight: bold;
  font-size: 28rpx;
}
.music-icon-outer-netease {
  text-align: right;
  height: 4vw;
  width: 10%;
  align-self: center;
}
.music-icon-outer-vote {
  text-align: right;
  height: 4vw;
  width: 10%;
  align-self: center;
}
.music-icon-outer-bilibili {
  text-align: right;
  height: 4vw;
  width: 10%;
  align-self: center;
}
.icon-bilibili {
  height: 4vw;
  width: 8vw;
}
.icon-netease {
  height: 4vw;
  width: 4vw;
}
.icon-vote {
  height: 4vw;
  width: 4vw;
}
.icon-quote {
  height: 5vw;
  width: 5vw;
}
.function_container{
  margin-top: 5vw;
  text-align:center;
  background-color:#eeeeee;
  border-radius: 20rpx;
  display: flex;
  width: 600rpx;
}

.function_text_container{
  padding-left: 20rpx;
  padding-right:20rpx;
  padding-top:10rpx;
  padding-bottom:10rpx;
  display: flex;
  flex-direction: column;
  position: relative;
  top: 50%;
  transform: translate(0, -50%);
}

.function_text_title{
  text-align: left;
  font-size: 28rpx;
  font-weight: bold;
}

.function_text_detail{
  text-align: left;
  font-size: 28rpx;
}

.function_bilibili_icon{
  width:80rpx;
  height:40rpx;
  position: absolute;
  bottom: 15rpx;
  right: 15rpx;
}

.function_netease_icon{
  width:40rpx;
  height:40rpx;
  position: absolute;
  bottom: 15rpx;
  right: 15rpx;
}

.function_bilibili_image{
  height:150rpx;
  width:230rpx;
  border-radius: 20rpx
}

.function_netease_image{
  height:150rpx;
  width:150rpx;
  border-radius: 20rpx
}

.function_bilibili_right{
  width: 370rpx;
  height: 150rpx;
  position: relative;
}

.function_netease_right{
  width: 450rpx;
  height: 150rpx;
  position: relative;
}

.function_vote_title{
  margin-left:30rpx;
  margin-top:20rpx;
  text-align: left;
  font-size: 32rpx;
  font-weight: bold;
}

.function_vote_option_list{
  background-color: #ffffff;
  height: 70rpx;
  margin: 20rpx 20rpx 10rpx 20rpx;
  border-radius: 20rpx;
  position: relative;
}

.function_vote_option_list_selected{
  background-color: #ffffff;
  height: 70rpx;
  margin: 20rpx 20rpx 10rpx 20rpx;
  border-radius: 20rpx;
  position: relative;
  border: 5rpx solid #D85050;
}

.function_vote_option_lower{
  height:100%;
  width: 100%;
  background-color: #ffffff;
  border-radius: 20rpx;
  display: flex;
  flex-direction: row;
  position: relative;
}

.function_vote_option_upper{
  height:100%;
  width: 50%;
  background-color: #D85050;
  border-radius: 20rpx;
  position: absolute;
  top:0;
  left:0;
  overflow: hidden;
}

.function_vote_option_upper_inner{
  width: 560rpx;
  height: 60rpx;
  position: relative;
}

.function_vote_option_lower_text_left{
  color:#D85050;
  font-size: 30rpx;
  position: absolute;
  left:30rpx;
  top: 15rpx;
}

.function_vote_option_lower_text_right{
  color:#D85050;
  font-size: 30rpx;
  position: absolute;
  right:30rpx;
  top: 15rpx;
}

.function_vote_option_upper_text_left{
  color:#ffffff;
  font-size: 30rpx;
  position: absolute;
  left:30rpx;
  top: 15rpx;
}

.function_vote_option_upper_text_right{
  color:#ffffff;
  font-size: 30rpx;
  position: absolute;
  right:30rpx;
  top: 15rpx;
}

.function_article_author{
  margin-left:10rpx;
  font-weight: bold;
  font-size: 30rpx;
}