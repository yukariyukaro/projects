.tab-bar {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding-bottom: env(safe-area-inset-bottom);
    filter: drop-shadow(0px -2px 10px rgba(0,0,0,0.06));
    display: flex;
    z-index: 999999;
    height: 110rpx;
}

.tab-bar-item {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    position: relative;
}

.tab-bar-item-center {
    width: 132rpx;
    height: 132rpx;
    position: relative;
}

.tab-bar-item-image {
    width: 56rpx;
    height: 56rpx;
}

.tab-bar-item-view {
    font-size: 20rpx;
    line-height: 28rpx;
}

.tab-bar-public {
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
    /* background-color: #fff; */
    position: absolute;
    top: -20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

