.tab-bar-public-icon {
    width: 120rpx;
    height: 120rpx;
    background-color: #ffffff;
    border: 20rpx solid #ffffff;
    border-radius: 50%;
}

.tab-bar-badge {
    position: absolute;
    top: 10rpx;
    left: 53%;
    height: 30rpx;
    background: linear-gradient(82.01deg,#FF5F5C 28.29%,#FE8A63 100%);
    border-radius: 15rpx;
    font-weight: bold;
    font-size: 24rpx;
    line-height: 20rpx;
    color: #FFFFFF;
    text-transform: uppercase;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0 8rpx;
}

.tab-bar-tip {
    position: absolute;
    top: 12rpx;
    left: 53%;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background: linear-gradient(84.52deg,#FF5F5C 28.29%,#FE8A63 100%);
}