.more-avatar-outer {
  margin-top: 8vw;
  text-align: center;
  flex: 1
}
.avatar-image-wrapper {
  width: 20vw;
  height: 20vw;
  position: relative;
  display: inline-block;
}
.more-avatar {
  width: 100%;
  height: 100%;
  border: 2px solid var(--primary);
  box-sizing: border-box;
  border-radius: 10vw;
  box-shadow: var(--shadow-2);
}
.avatar-ripple {
  position: absolute;
  top: 1px;
  left: 1px;
  right: 1px;
  bottom: 1px;
  border-radius: 50%;
  border: 1px solid var(--primary);
  z-index: -1;
}
.media-qr {
  height: 20vw;
  width: 20vw
}
.version {
  text-align: center;
  margin-bottom: 8vw;
  color: var(--on-bg-2)
}

.outer{
  margin:40rpx 30rpx 40rpx 30rpx;
  width:690rpx;
  border-radius:20rpx;
  font-size: 30rpx;
  background-color: var(--bg-2);
  box-shadow: 0px 0px 10px rgba(0,0,0,0.16);
}

.divider{
  height: 1px;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  background-color: var(--divider);
}