.avatar-outer {
  text-align: center;
  flex: 1
}
.avatar-image-wrapper {
  width: 150rpx;
  height: 150rpx;
  position: relative;
  display: inline-block;
}
.avatar {
  width: 100%;
  height: 100%;
  border: 2px solid var(--primary);
  box-sizing: border-box;
  border-radius: 75rpx;
  box-shadow: var(--shadow-2);
}
.avatar-ripple {
  position: absolute;
  top: 1px;
  left: 1px;
  right: 1px;
  bottom: 1px;
  border-radius: 50%;
  border: 1px solid var(--primary);
  z-index: -1;
}
.description{
  margin-top: 20rpx;
  text-align:center;
  font-family: Helvetica;
  color: var(--on-bg-1);
  font-size: 40rpx;
  font-weight: bold;
}

