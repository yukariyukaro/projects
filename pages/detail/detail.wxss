/* skeleton */
.skeleton {
  animation: skeleton-loading 1s linear infinite alternate;
}

@keyframes skeleton-loading {
  0% {
    background-color: var(--bg-gray-1);
  }

  100% {
    background-color: var(--bg-2);
  }
}

.header-outer-skeleton {
  position: fixed;
  margin: 23rpx 30rpx 43rpx 30rpx;
  width: 690rpx;
  border-radius: 20rpx;
  background-color: var(--bg-gray-1);
  height: 70rpx;
}

.comment-content-outer-skeleton {
  background: var(--bg-gray-1);
  position: fixed;
  bottom: calc(env(safe-area-inset-bottom) + 20rpx);
  left: 5vw;
  right: 5vw;
  height: 10vw;
  border-radius: 40rpx;
}

.post-skeleton {
  position: relative;
  width: calc(100vw - 14vw - 1.5vw);
  padding: 14vw 6vw 1.5vw 10vw;
  height: fit-content;
}

.skeleton-post-content-outer {
  display: flex;
  flex-direction: column;
  height: 86rpx;
  justify-content: space-between;
  margin: 20rpx 0;
  width: 100%;
  margin-bottom: 40rpx;
}

.skeleton-text-full-width {
  width: 100%;
  background-color: var(--bg-gray-1);
  height: 35rpx;
  border-radius: 15rpx;
}

.skeleton-signiture {
  width: 100%;
  display: flex;
  flex-direction: column;
  float: right;
  justify-content: space-between;
  height: 100rpx;
  align-items: flex-end;
  margin-bottom: 20rpx;
}

.skeleton-avatar {
  height: 45rpx;
  background-color: var(--bg-gray-1);
  width: 45rpx;
  border-radius: 50%;
  margin-right: 18rpx;
}

.skeleton-avtar-alias {
  display: flex;
  float: right;
}

.skeleton-text {
  float: right;
  margin-top: 5rpx;
  height: 35rpx;
