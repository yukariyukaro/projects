.header-outer {
  height: 11vw;
  background: var(--bg-3);
  font-size: 4vw;
  width:95%;
  left:2.5%;
  top: 2vw;
  position: fixed;
  z-index:10;
  border-radius: 15px;
  display: flex;

}
.header {
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 0 7vw;
}
.header-title {
  display: flex;
  align-self: center;
}
.header-status{
  position: relative;
  margin-right: 5vw;
  align-self: center;
  margin-top: -1vw;
} 
.header-control {
  display: flex;
  align-self: center;
}
.status-active:after {
  content: "";
  display: block;
  position: absolute;
  bottom: -0.5vw;
  right: 3vw;
  width:10vw;
  height: 1vw;
  background: var(--secondary);
  z-index: -1
}
.status-inactive:after {
  content: "";
  display: block;
  position: absolute;
  bottom: -0.5vw;
  right: 3vw;
  width:10vw;
  height: 1vw;
  background: var(--primary);
  z-index: -1
}
.topic {
  color: var(--on-bg-2);
  display: inline;
  padding: 0.5vw 2vw;
  border-radius: 8px;
  background: var(--bg-gray-1);
  margin-left: 1vw;
}
.icon-more {
  width:7vw; 
  height:7vw;
  margin-top: 1vw;
}

.content-outer {
  width:100%;
  height:100%;
  padding-bottom: 30%;
  font-size: 4vw;
}
.post-content {
  text-align:left;
  padding: 0.5vw 5vw 3.5vw 5vw;
  white-space: pre-wrap;
  word-break: break-word;
}
.post-text {
  width:100%;
  word-break: break-word;
}
.post-datetime {
  color: var(--on-bg-2);
  text-align: right;
}
.post-outer{
  margin: auto;
  width: 90%;
}
.alias {
  color: var(--on-secondary);
  font-weight: bold;
  float: right;
  display: inline;
  padding: 0.5vw 2vw;
  border-radius: 5px;
  background: var(--secondary-gradient);
  font-size: 4vw;
  margin-top: 2vw;
}
.alias-active {
  color: var(--on-secondary);
  font-weight: bold;
  float: right;
  display: inline;
  padding: 0.5vw 2vw;
  border-radius: 5px;
  background:var(--secondary-gradient);
  font-size: 4vw;
  margin-top: 2vw;
  opacity: 0.6;
}
.avatar-outer {
  width: 10vw;
  height: 10vw;
  float: right;
  margin-top: 0.5vw;
}
.avatar {
  width: 8vw;
  height: 8vw
}
/* 显示评论数和围观数的区域 */
.comment-follower-num-area {
  width: 100%;
  height: 8vw;
  display: flex;
}
.comment-follower-num-area .icon {
  width: 4vw;
  height: 4vw;
}
.comment-icon-outer {
  margin: 0.7vw 2vw
}
.follower-icon-outer {
  margin: 0.5vw 2vw
}
.share-icon-outer {
  margin: 0.5vw 5vw
}
.share-icon-outer button {
  padding: 0 !important;
  background-color: transparent;
  width: 6vw !important;
}
/* 显示所有评论 */
.comment-area {
  width: 90%;
  float: right;
  padding-bottom: 20vw
}
/* 新评论区 */
.comment-content-outer{
  background: var(--bg-3);
  color: var(--on-bg-2);
  font-size: 4vw;
  position: fixed;
  bottom: 4vw;
  left: 5vw;
  right: 5vw;
  height: 10vw;
  box-shadow: var(--shadow-3);
  border-radius: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.comment-content-outer:active {
  opacity: 0.8;
}
.icon-send {
  width:5vw; 
  height:5vw;
  margin-left: 3px;
}
.scroll-outer {
  height:calc(100vh - 15vw);
  padding-top: 15vw
}