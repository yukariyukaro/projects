@import '../func0.wxss';

.set-own-sheet {
  text-align: center;
  line-height: 8vw;
  font-size: 4vw;
  font-weight: bold;
  text-decoration: underline;
}
.title-outer {
  width: 90%;
  height: auto;
  border-radius: 10px;
  box-shadow: var(--shadow-3);
  padding: 3vw 0;
  background-color: var(--bg-2);
  margin: auto;

}
.author-avatar-outer {
  text-align: center;
}
.author-avatar {
  width: 15vw;
  height: 15vw;
  border-radius: 10px
}
.title {
  text-align: center;
  width: 100%;
  font-size: 6vw;
  font-weight: bold
}
.emph {
  color: var(--primary);
  font-weight: bold;
}
.score {
  text-align: center;
  font-size: 5.5vw;
}
.score-desc {
  text-align: center;
  font-size: 4vw;
  color: var(--on-bg-2);
}
.score-outer {
  width: 90%;
  height: auto;
  border-radius: 10px;
  box-shadow: var(--shadow-3);
  padding: 3vw 0;
  background-color: var(--bg-2);
  margin: auto;
  margin-bottom: 2vw;

}
.present {
  text-align: center;
  font-size: 4vw;
}
.single-user {
  display: flex;
  width: 100%;
  margin: 2vw 0
}
.user-avatar {
  width: 10vw;
  height: 10vw;
  border-radius: 5px
}
.user-avatar-outer {
  align-self: center
}
.user-score {
  flex: 1;
  text-align: right;
  align-self: center;
  margin-right: 2vw;
  font-size: 5vw;
  font-weight: bold;
  color: var(--primary)
}
.user-nickname {
  align-self: center;
  font-size: 5vw;
  margin: 0 2vw
}
.user-ranking {
  align-self: center;
  font-size: 5vw;
  margin: 0 2vw
}
.problem-outer {
  height: 130vw;
  overflow: scroll
}
swiper {
  height: 100%
}
swiper-item {
  overflow: scroll
}
.problem-card-outer {
  width: 82%;
  height: auto;
  border-radius: 10px;
  box-shadow: var(--shadow-3);
  padding: 2vw 0;
  background-color: var(--bg-2);
  margin: 2% 9% 0 9%;
  border: 1.5px solid gray
}
.problem-image-outer {
  width: 68vw;
  height: 51vw;
  margin-left: 7vw;
}
.problem-image {
  width: 100%;
  height: 100%;
  border-radius: 6px;
}
.problem-body-outer {
  width: 80%;
  text-align: center;
  margin-left: 10%;
  margin-top: 2%;
}
.problem-body-index {
  color: var(--on-bg-2);
}
.problem-answer-outer {
  width: 80vw;
  margin: 0 9vw
}
.problem-single-answer {
  width: 100%;
  border-radius: 6px;
  height: auto;
  line-height: 5vw;
  margin: 3vw 0;
  background-color: var(--bg-2);
  display: flex;
  padding: 2vw 1vw;
  box-shadow: 2vw 0vw 4vw 0vw rgba(170, 167, 167, 0.3);
  
}
.answer {
  line-height: 8vw;
  margin-left: 2vw;
}
.answer-input {
  margin-left: 2vw;
  width: 100%;
  align-self: center
}
.answer-radio {
  margin-top: -0.5vw;
  align-self: center
}
.share-button-group {
  display: flex;
  margin: 5vw 2.5vw;
  margin-top: 0;
}
.half-button {
  padding: 0 !important;
  color: var(--on-secondary);
  background: var(--secondary-gradient);
  width: 42.5vw !important;
  height:11vw;
  line-height: 11vw;
  border-radius: 10px;
  box-shadow: var(--secondary-shadow);
}
.submit-button {
  position: fixed;
  bottom: 5vw;
  width: 90vw !important;
  left: 5vw;
}