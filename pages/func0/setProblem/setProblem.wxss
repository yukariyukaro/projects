@import '../func0.wxss';

swiper {
  height: 90%
}
swiper-item {
  overflow: scroll
}
.problem-card-outer {
  width: 90%;
  height: auto;
  border-radius: 10px;
  box-shadow: var(--shadow-3);
  padding: 3vw 0;
  background-color: var(--bg-2);
  margin: 5% 5% 0 5%;
  
}
.problem-image-outer {
  width: 80vw;
  height: 60vw;
  margin-left: 5%;
}
.problem-image {
  width: 100%;
  height: 100%;
  border-radius: 6px;
}
.problem-body-outer {
  width: 80%;
  text-align: center;
  margin-left: 10%;
  margin-top: 2%;
}
.problem-answer-outer {
  width: 88vw;
  margin: 0 6vw;
}
.problem-single-answer {
  width: 100%;
  display: flex;
}
.problem-single-field {
  width: 100%;
  border-radius: 6px;
  height: auto;
  line-height: 5vw;
  margin: 2vw 0;
  background-color: var(--bg-2);
  display: flex;
  padding: 2vw 1vw;
  box-shadow: 2vw 0vw 4vw 0vw rgba(170, 167, 167, 0.3);
  
}
.delete-button {
  align-self: center;
  width:5vw;
  height:5vw;
  margin-left: 2vw
}
.add-button {
  width:7vw;
  height:7vw;
  margin-top: 2vw;
  float: right
}
.answer {
  line-height: 8vw;
  margin-left: 2vw;
}
.answer-input {
  margin-left: 2vw;
  width: 70%;
  align-self: center
}
.answer-radio {
  margin-top: -0.5vw;
  align-self: center
}
.edit-answer {
  flex: 1;
  color: var(--on-bg-2);
  text-align: right;
  margin-right: 2vw
}
button {
  font-size: 5vw !important;
  font-weight: bold;
  width:30% !important;
}
.btns {
  height: auto;
  display: flex;
  position: fixed;
  bottom: 5vw;
  right: 0;
  left: 0;
}
.btns button {
  height: 200%;
}
.choose-present {
  width: 80%;
  margin: 5vw;
  margin-top: 50%;
  background-color: var(--bg-2);
  padding: 5vw;
  border-radius: 10px;
}
.choose-present .title {
  text-align: center;
  font-size: 5vw;
  font-weight: bold
}
.present-item-outer {
  display: flex;
  margin: 3vw 0;
}
.present-item-title {
  align-self: center
}
.present-item {
  flex: 1;
  text-align: center;
  align-self: center;
}
.present-item-change {
  padding: 1vw;
  border: 1px var(--bg-gray-1) solid;
  border-radius: 5px;
}
.present-num-title {
  flex: 1
}
.present-num {
  flex: 1;
  text-align: right;
  margin-right: 1vw;
}
.present-num-outer {
  display: flex;
  margin: 3vw 0;
}
.present-score-outer {
  display: flex;
  margin: 3vw 0 0;
}
.present-score-item {
  flex: 1
}
.present-score {
  flex: 1;
  text-align: right;
  margin-right: 1vw;
}