<view style="padding-top: calc({{navBarHeight}}px + 0rpx)" class="fix-tabbar">
    <view class="user-background" style="transform: scale({{userBackgroundScale}});">
        <image class="user-background-image" mode="aspectFill" src="{{mineBackgroundImage}}"
            style="height: 496rpx"></image>
        <view class="user-background-gradient"></view>
    </view>
    <view class="own-header">
        <view class="header-top">
            <view class="own-header-img-div" data-url="/pages/userdata/userdata" bindtap="nav2Url">
                <image mode="aspectFill" class="own-header-img" src="{{preURL + userInfo.user_avatar}}.svg" wx:if="{{userInfo.user_avatar}}"></image>
            </view>
            <view class="header-middle" url="/pages/mine/editmine/editmine">
                <view class="own-header-r-t text-overflow">{{userInfo.user_serial}}</view>
            </view>

        </view>
        <view class="header-bottom">
            <view class="header-bottom-li" data-url="/pages/pastPost/pastPost" bindtap="nav2Url">
                <view class="own-header-num">{{userInfo.post_count||0}}</view>
                <view class="own-header-text">树洞</view>
            </view>
            <view class="header-bottom-li" data-url="/pages/followPost/followPost" bindtap="nav2Url">
                <view class="own-header-num">{{userInfo.follow_count||0}}</view>
                <view class="own-header-text">围观</view>
            </view>
        </view>
    </view>
