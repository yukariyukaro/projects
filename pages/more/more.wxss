.more-avatar-outer {
  margin-top: 8vw;
  text-align: center;
  flex: 1
}
.avatar-image-wrapper {
  width: 20vw;
  height: 20vw;
  position: relative;
  display: inline-block;
}
.more-avatar {
  width: 100%;
  height: 100%;
  border: 2px solid var(--primary);
  box-sizing: border-box;
  border-radius: 10vw;
  box-shadow: var(--shadow-2);
}
.avatar-ripple {
  position: absolute;
  top: 1px;
  left: 1px;
  right: 1px;
  bottom: 1px;
  border-radius: 50%;
  border: 1px solid var(--primary);
  z-index: -1;
}
.media-qr {
  height: 20vw;
  width: 20vw
}
.version {
  text-align: center;
  margin-bottom: 8vw;
  color: var(--on-bg-2)
}
.more-outer{
  text-align: left;
  margin: 5vw;
}
.single-info-list {
  border-radius: 10px;
  padding: 3vw;
  border: 1px rgba(0,0,0,0.3) solid;
  margin: 2vw 0;
  box-shadow: var(--shadow-inset-1);
  background-color: var(--bg-2);
}
.single-info-content {
  margin: 0 3vw;
}
.long-button {
  padding: 0 !important;
  margin-top: 5vw;
  width: 90% !important;
  height:11vw;
  line-height: 11vw;
  margin-bottom: 5vw;
}
.rules {
  max-height: 50vh;
  overflow: scroll;
}