
.menu-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 50rpx;
  box-sizing: border-box;
  background: #FFFFFF;
  position: fixed;
  z-index: 100;
  box-shadow: 0px 2rpx 24rpx 0px rgba(149, 149, 149, 0.2);
}

.menu-item {
  position: relative;
  width: 88rpx;
  height: 146rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
}

.menu-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: 15rpx;
  background: #D8D8D8;
}

.menu-title {
  line-height: 40rpx;
  font-size: 28rpx;
  color: #999999;
  margin-top: 16rpx;
}

.menu-num {
  position: absolute;
  right: -10rpx;
  top: -20rpx;
}

