
.logo-outer {
  width: 100%;
  text-align: center;
}
.logo {
  text-align: center;
  margin-top: 6vw;
  width: 25vw;
  height: 25vw;
}

.description{
  margin-top: 20rpx;
  text-align:center;
  font-family: Helvetica;
  color: var(--on-bg-1);
  font-size: 40rpx;
  padding-bottom: 100rpx;
  font-weight: bold;
}

.inputbar-auth-group {
  display: flex;
  width: 100%;
  justify-content: left;
  margin: 30rpx 95rpx;
  color: var(--on-bg-2);
}

.inputbar-authcode-group {
  display: flex;
  justify-content: left;
  color: var(--on-bg-2);
  height: 90rpx;
  width: 90%;
  margin: 0 10.5%;
}

.inputbar{
  width: 90%;
  display: flex;
  font-size: 32rpx;
  font-weight: 400;
  height: 40rpx;
}
.inputbar-auth{
  margin:0;
  height: 100%;
  box-sizing:border-box;
  width: 285rpx;
  font-size: 32rpx;
  font-weight: 400;
}

.inputbar-input{
  width:100%;
  height:100%;
  padding-left: 40rpx;
  color: var(--text);
}

.inputbtn-getauth{
  line-height: 8.5vw;
  font-size:3.5vw;
  background-color: var(--primary);
  color: var(--on-primary)
}

.inputbtn-submit{
  width:100% !important;
  height: 100%;
  box-sizing:border-box;
  text-align:center;
  line-height:8vw;
  font-size: 4vw;
  font-weight:500;
}

.contact {
  position: fixed;
  bottom: 10vw;
  text-align: center;
  left: 15vw;
  width: 70vw;
  color: var(--on-bg-2);
  font-size: 20rpx
}
.mon-picker {
  align-self: center;
  width: 100%;
}
.other-school-button {
  background-color: var(--bg-gray-1);
  color: var(--on-bg-gray-2);
  border-radius: 5px;
  padding: 15rpx 20rpx;
}
.avatar-outer {
  text-align: center;
  flex: 1
}
.avatar-image-wrapper {
  width: 150rpx;
  height: 150rpx;
  position: relative;
  display: inline-block;
}
.avatar {
  width: 100%;
  height: 100%;
  border: 2px solid var(--primary);
  box-sizing: border-box;
  border-radius: 75rpx;
  box-shadow: var(--shadow-2);
}
.avatar-ripple {
  position: absolute;
  top: 1px;
  left: 1px;
  right: 1px;
  bottom: 1px;
  border-radius: 50%;
  border: 1px solid var(--primary);
  z-index: -1;
}

.common-outer{
  margin: 40rpx 80rpx;
  padding: 30rpx 0;
  border-radius:20rpx;
  font-size: 30rpx;
  background-color: var(--bg-2);
  box-shadow: 0px 0px 10px rgba(0,0,0,0.16);
  position: relative;
}


.divider{
  height: 1px;
  margin-left: 80rpx;
  margin-right: 80rpx;
  margin-top: 20rpx;
  margin-bottom: 35rpx;
  background-color: var(--divider);
}

checkbox {
  transform: scale(0.8,0.8);
}
