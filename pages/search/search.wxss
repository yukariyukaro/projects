.overlay {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  height: 10000rem;
  background-color: rgba(0, 0, 0, 0.075);
  z-index: 1;
}

.overlay-dark{

  background-color: rgba(49, 49, 49, 0.555);

}
.outer {
  width: 100vw;
}
.more-avatar-outer {
  margin-top: 50rpx;
  text-align: center;
  flex: 1;
  margin-bottom: 10rpx;
}
.avatar-image-wrapper {
  width: 160rpx;
  height: 160rpx;
  position: relative;
  display: inline-block;
}
.more-avatar {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  border-radius: 80rpx;
  box-shadow: var(--shadow-2);
  background-color: #fff;
}

.avatar-ripple {
  position: absolute;
  top: 1px;
  left: 1px;
  right: 1px;
  bottom: 1px;
  border-radius: 50%;

  z-index: -1;
}
.search-outer {
  display: flex;
  padding-top: 15rpx;
  width: 92%;
  margin: auto
}
.search-input-outer {
  height: 70rpx;
  width: 60vw;
  border-radius: 3vw;
  background-color: var(--bg-2);
  box-shadow: 0px 0px 10px rgba(0,0,0,0.16);
  flex: 1;
  align-self: center;
  display: flex;
  font-size: 4vw;
  line-height: 6.5vw;
  margin-bottom: 20rpx;
}
.search-input {
  width: 100%;
  align-self: center;
  margin-left: 3vw
}
.search-hashtag {
  font-size: 5vw;
  font-weight: bold;
  align-self: center;
  margin-left: 3vw;
  color: #8C8C8C;
}
.small-icon-outer {
  align-self: center;
  width: 60rpx;
  height: 60rpx;
  display: flex;
}
.small-icon {
  width: 30rpx;
  height: 30rpx;
  margin: auto
}
.search-filter-container{
  height: auto;
  margin-top: 0rpx;
  margin-bottom: 0rpx;
  position: absolute;
  z-index: 100;
  background-color: var(--bg-1);
}

.search-mode-propmt{
  font-size: 25rpx;
  font-weight: bold;
}
.search-modes-outer{
  padding-left: 7vw;
  display: block;
  z-index: 10;
  width: 100vw;
  height: auto;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}
.search-modes-inner{
  width: 70%;
  display: inline-block;
  text-align:left;
  padding: 0vw 3vw 0vw 1vw;
  height: auto;
  z-index: 10;

}




radio-group{
  margin:10rpx 0rpx;
}
radio-group>label{
  width:15%;
  display: inline-block;
  padding:3rpx 0vw;
  margin:0vw 3vw 0vw 0;
  border-radius: 20rpx;
  background-color: var(--bg-gray-2)
}
radio-group>label>radio{
 width:100%;
 z-index: 3;
 display: none;
}
radio-group label .free-text{
 width:100%;
 text-align: center;
 display: inline-block;
 font-size:25rpx;
 
}
.topic-chosen {
  color: rgb(54, 98, 190);
  background-color: rgba(157, 186, 248, 0.753);
}
.topic {
  color: var(--on-bg-2);
}

.search-option-row {
  display: flex;
  justify-content: space-between;
  width: 85%;
  margin: auto;
  margin-top: 5vw;
}
.search-option-box {
  width: 100%;
  border-radius: 10px;
  font-size: 4vw;
  background-color: var(--bg-2);
  box-shadow: var(--shadow-1);
  box-sizing: border-box;
  padding: 3vw;
}
.post-content{
  height: 100%;
  width: 100%;
  padding-bottom:10vw;
}
.scroll-outer {
  height:calc(90vh - 27vw);
  position: relative;
}
.form-row {
  display: flex;
  margin-bottom: 3vw;
}
.footer {
  font-size: 10px;
  color: var(--on-bg-2);
  margin-top: -2vw;
}
.form-row:last-child {
  margin-bottom: 0;
}
.form-row > label {
  flex: 1;
  font-size: 14px;
}
.form-row > switch, .form-row > radio, .form-row > checkbox {
  flex: 0;
}
.form-row > switch {
  transform: scale(0.6);
  height: 0;
}
.form-row > radio, .form-row > checkbox {
  zoom: 0.8
}
button[form-type] {
  font-size: 4vw !important;
  font-weight: bold;
  width: 30% !important;
  padding: 1vw !important;
  margin: 0 0 0 auto !important;
}
.no-result {
  font-size: 4vw;
  color: var(--on-bg-2);
  text-align:center;
  margin-top: 4vw;
}