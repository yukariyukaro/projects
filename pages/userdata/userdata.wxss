.own-header {
  display: flex;
  justify-content: center;
  flex-flow: column nowrap;
  width: 690rpx;
  margin: 40rpx 30rpx 40rpx 30rpx;
  border-radius: 20rpx;
  background-color: var(--bg-2);
  box-shadow: 0px 0px 10px rgba(0,0,0,0.16);
}

.header-top {
  /* height: 186rpx; */
  padding: 0 32rpx 20rpx 32rpx;
  display: flex;
}

.own-header-img-div,
.own-header-img {
  width: 120rpx;
  height: 120rpx;
}

.own-header-img-div {
  margin-top: 20rpx;
}

.header-middle {
  -webkit-box-flex: 1;
  flex: 1;
  padding-left: 40rpx;
}

.header-right {
  width: 100rpx;
  height: 54rpx;
  border-radius: 27rpx;
  background-color: var(--bg-gray-2);
  text-align: center;
  line-height: 54rpx;
  font-size: 24rpx;
  position: relative;
  top: 50%;
  transform: translate(0, -50%);
  margin-top: 10rpx;
}

.own-header-r-t {
  margin-top: 10rpx;
  font-size: 40rpx;
  font-weight: bold;
  line-height: 48rpx;
  position: relative;
  top: 50%;
  transform: translate(0, -50%);
  width: 340rpx;
  height: 50rpx;
  overflow: hidden;
}

.menu {
  margin: 40rpx 30rpx;
  box-shadow: 0px 0px 10px rgba(0,0,0,0.16);
  border-radius: 20rpx;
  background-color: var(--bg-2);
}

.u-flex-item {
  padding: 30rpx !important;
  justify-content: space-between;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}

.u-row-left {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: flex-start;
}

.u-row-left image {
  width: 45rpx;
  height: 45rpx;
  padding-right: 20rpx;
}

.name {
  font-size: 28rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.note {
  font-size: 22rpx;
  color: #8C8C8C;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.serial-input{
  text-align: right;
  font-size: 32rpx;
}

.outer{
  margin:40rpx 30rpx 40rpx 30rpx;
  width:690rpx;
  border-radius:20rpx;
  font-size: 30rpx;
  background-color: var(--bg-2);
  box-shadow: 0px 0px 10px rgba(0,0,0,0.16);
}
.single-avatar {
  width: 100rpx;
  height: 100rpx;
}
.avatar-outer {
  text-align: center;
  padding: 2vw;
  margin: 1vw;
  border: 2px solid var(--bg-gray-1);
  border-radius: 20rpx;
}
.avatar-outer-active {
  text-align: center;
  padding: 2vw;
  margin: 1vw;
  border: 2px solid var(--secondary);
  border-radius: 20rpx;
}

.mainButton-r{
  background-color: var(--primary);
  color: #FFFFFF;
  line-height: 60rpx;
  margin-bottom: 60rpx;
  margin-top:40rpx;
  font-size: 34rpx;
  border-radius: 20rpx;
  height: 90rpx;
}