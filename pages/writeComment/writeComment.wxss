.outer {
  width: 100%;
  height: 100%;
  padding-top: 6vw;
  padding-bottom: 7vw;
  font-size: 4vw
}
/* 写作块 */
.textarea-outer{
  text-align:left;
  padding: 3vw 5vw 3vw 5vw;
  height: 400rpx
}
textarea {
  width: 100%;
  height: 400rpx;
  background-color: var(--bg-2);
}
.remnant {
  float:right; 
  color: var(--on-bg-2);
  margin-top:1vw;
}
/* switch块 */
.switch-group {
  text-align:left;
  padding: 3vw 2vw 4vw 5vw;
}
.switch-group-anonymous {
  display: flex;
  margin-top: 1vw
}
.switch-question-desc {
  font-size: 3vw;
  color: var(--on-bg-2);
  margin-top: -2.5vw
}
.switch {
  text-align:right;
  margin-top: -0.5vw;
  flex: 1
}
switch {
  transform:scale(0.6) !important;
}
/* 发布按钮 */
button {
  font-size: 5vw !important;
  font-weight: bold;
  width:42.5% !important;
  height:200%;
}
.save {
  right:5vw;
  float: right;
}
.cancel {
  left:5vw;
  float:left;
}
/* 通用 */
.block {
  width: 90%;
  margin: auto;
  margin-bottom: 8vw;
  background-color: var(--bg-2);
}
.radius{
  border-radius:10px;
}